#include <iostream> 
#include <cstdlib> 
#include <ctime> 
#include <limits> 
using namespace std; 
int main() { 
    int secretNumber; 
    int userGuess; 
    int attempts; 
    char choice; 
     srand(time(0)); 
    cout << "==========================================" << endl; 
    cout << "        WELCOME TO NUMBER GUESSING GAME    " << endl; 
    cout << "==========================================" << endl; 
    do { 
        // Generate a random number between 1 and 100 
        secretNumber = rand() % 100 + 1; 
        attempts = 0; 
        cout << "\n I have selected a number between 1 and 100." << endl; 
        cout << "Try to guess it!" << endl; 
 
        while (true) { 
            cout << "\nEnter your guess: "; 
            cin >> userGuess; 
            if (cin.fail()) { 
                cin.clear();  
                cin.ignore(numeric_limits<streamsize>::max(), '\n'); 
                cout << "Invalid input! Please enter a number only." << endl; 
                continue; 
            } 
            attempts++; 
            if (userGuess < secretNumber) { 
                cout << "Too low! Try again." << endl; 
            }  
            else if (userGuess > secretNumber) { 
                cout << "Too high! Try again." << endl; 
            }  
            else { 
                cout << "\n Congratulations!" << endl; 
                cout << "You guessed the correct number: " << secretNumber << endl; 
                cout << "Total attempts: " << attempts << endl; 
                break; 
            } 
        } 
        cout << "\n  Do you want to play again? (y/n): "; 
        cin >> choice; 
    } while (choice == 'y' || choice == 'Y'); 
    cout << "\n Thank you for playing the game!" << endl; 
    cout << "Have a nice day       " << endl; 
    return 0; 
}
